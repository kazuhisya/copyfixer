{
    "manifest_version": 3,
    "name": "CopyURL",
    "homepage_url": "https://github.com/dingzhengkai/copyfixer",
    "update_url": "https://github.com/dingzhengkai/copyfixer",
    "version": "0.0.2",
    "description": "Copy title and URL using Control/Command-C.",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "32": "icon32.png",
        "64": "icon64.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "128": "icon128.png",
            "16": "icon16.png",
            "32": "icon32.png",
            "64": "icon64.png"
        },
        "default_title": "CopyURL"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "copyfixer.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_start"
        }
    ]
}
